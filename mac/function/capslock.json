{
  "title": "AB Hyper Enhancement",
 "rules": [
    {
      "description": "CapsLock to Hyper/Escape",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "WC_keys_enable",
                "value": 0
              }
            }
          ],
          "type": "basic"
        }
      ]
    }  
  ]
}
